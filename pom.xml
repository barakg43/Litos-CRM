		<!-- https://mvnrepository.com/artifact/org.yaml/snakeyaml -->
		<!--        <dependency>-->
		<!--            <groupId>org.yaml</groupId>-->
		<!--            <artifactId>snakeyaml</artifactId>-->
		<!--            <version>2.0</version>-->
		<!--        </dependency>-->
		<!-- Json parser -->
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-maven-plugin</artifactId>
			</plugin>
		</plugins>
	</build>

</project>
